<Window x:Class="FoolGame.Uil.Window.VkPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VkPassword" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <TextBox Text="{Binding Email}" Width="100" Height="20"/>
        <TextBox Grid.Row="1" Text="{Binding Password}" Width="100" Height="20"/>
        <Button Grid.Row="3" Content="Share" Click="Button_Click" ></Button>
    </Grid>
</Window>
